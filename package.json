{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "predev": "run-s generate:prisma",
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "prebuild": "run-s clean generate:*",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "test": "dotenv -e .env.test -- jest",
    "seed": "dotenv -- ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "db:save": "yarn prisma migrate save --experimental",
    "db:migrate": "yarn prisma migrate up --experimental",
    "prisma": "dotenv -- prisma",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "apollo-server": "^2.13.0",
    "bcrypt": "5.0.0",
    "dotenv": "^8.1.0",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "7.3.4",
    "jsonwebtoken": "8.5.1",
    "nexus-plugin-prisma": "^0.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.9",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "^14.0.27",
    "@types/prettier": "^2.0.0",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "cross-env": "^7.0.2",
    "dotenv-cli": "^3.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.10.1",
    "graphql-request": "1.8.2",
    "husky": ">=4",
    "jest": "^26.2.2",
    "jest-environment-node": "^26.2.0",
    "lint-staged": ">=10",
    "nanoid": "^3.1.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.1.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "1.0.0-pre.60",
    "typescript": "3.9.7",
    "typesync": "^0.7.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint",
    "*.{ts,js,json,md}": "prettier --write"
  }
}
